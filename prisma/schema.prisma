generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id             String   @id @default(uuid())
  orderType      String
  tokenIn        String
  tokenOut       String
  amount         Decimal
  status         String
  chosenDex      String?
  executionPrice Decimal?
  txHash         String?
  failureReason  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
